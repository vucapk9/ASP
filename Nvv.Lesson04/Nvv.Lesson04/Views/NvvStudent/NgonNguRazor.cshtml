
@{
    ViewBag.Title = "Ngôn Ngữ Razor";
}

<h2>Ngôn Ngữ Razor</h2>
<h3>Biến</h3>
@{
    var name = "Nguyễn Văn Vũ";
    int age = 22;
    DateTime dt = DateTime.Now;
}
<p>Họ tên:@name</p>
<p>Tuổi: @age</p>
<p>Time:@dt</p>
<hr />
<h3>Câu lệnh if</h3>
@{
    if (age > 20)
    {
        <p>Trẻ rồi</p>
    }
    else
    {
        <p>Đã già</p>
    }
}
<hr />
<h3>Loop: for, while, do...while, foreach....</h3>
@{
    int num = 10;
}
@for (int i = 0; i < num; i++)
{
    <li>@i => @i*@i</li>
}
<h3>Mảng</h3>
@{string[] names = { "Quyền", "Ánh Ngọc", "Phương Nhi", "Linh Chi" };
}
@foreach (var item in names)
{
    <p>@item</p>
}
@foreach (var item in ViewBag.names)
{
    <p>@item</p>
}

